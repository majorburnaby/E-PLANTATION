@model Plantation.Models.DB.Rainfall

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@{
    var message = TempData["successmessage"] ?? string.Empty;
}


@section Head{
    <!-- Plugins -->
    <link rel="stylesheet" href="~/assets/examples/css/layouts/panel-transition.css">
    <link href="~/global/vendor/bootstrap-datepicker/bootstrap-datepicker.css" rel="stylesheet" />
    <!-- Fonts -->
    <link rel="stylesheet" href="~/global/fonts/font-awesome/font-awesome.css">
    <style>
        .form-group.required .control-label:after {
            content: "*";
            color: red;
        }
    </style>
}

<div class="page">
    <div class="page-header">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Rainfall")">Rainfall</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </div>
    <div class="page-content">
        <div class="panel panel-bordered">
            <div class="panel-heading">
                <h3 class="panel-title">CREATE RAINFALL</h3>
                <div class="panel-actions">
                    <a class="panel-action icon md-fullscreen" data-toggle="panel-fullscreen" aria-hidden="true"></a>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    @using (Html.BeginForm("Create", "Rainfall", FormMethod.Post))
                    {
                    <div class="col-xs-12 col-lg-6">
                        @Html.ValidationSummary(true)
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Date</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(x => x.RAINDATE, new { @class = "form-control form-control-sm", placeholder = "Date", tabindex = "1" })
                                @Html.ValidationMessageFor(model => model.RAINDATE, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Location</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(x => x.BLOCKORGANIZATION, Model.GetSelectListBlockOrganization, new { @class = "form-control form-control-sm", tabindex = "1" })
                                @Html.ValidationMessageFor(model => model.BLOCKORGANIZATION, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Start</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.RAINSTART, new { @class = "form-control form-control-sm", placeholder = "Start", tabindex = "1" })
                                @Html.ValidationMessageFor(model => model.RAINSTART, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">End</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.RAINEND, new { @class = "form-control form-control-sm", placeholder = "End", tabindex = "2" })
                                @Html.ValidationMessageFor(model => model.RAINEND, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Quantity (mm)</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.RAINQUANTITY, new { @class = "form-control form-control-sm", placeholder = "Quantity (mm)", tabindex = "2" })
                                @Html.ValidationMessageFor(model => model.RAINQUANTITY, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Remark</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.REMARK, new { @class = "form-control form-control-sm", placeholder = "Remark", tabindex = "2" })
                                @Html.ValidationMessageFor(model => model.REMARK, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary"><i class="icon fa-save" aria-hidden="true"></i> Save</button>
                                <button type="button" class="btn btn-default waves-effect" onclick="location.href='@Url.Action("Index", "Rainfall")';return false;"><i class="icon fa-remove" aria-hidden="true"></i> Close</button>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Footer1{
    <!-- Plugins -->
    <script src="~/global/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/global/vendor/datatables-fixedheader/dataTables.fixedHeader.js"></script>
    <script src="~/global/vendor/datatables-bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/global/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script src="~/global/vendor/datatables-tabletools/dataTables.tableTools.js"></script>
    <script src="~/global/vendor/asrange/jquery-asRange.min.js"></script>
    <script src="~/global/vendor/bootbox/bootbox.js"></script>
    <script src="~/global/vendor/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script type="text/javascript">
        $('#RAINDATE').datepicker({
            format: 'mm/dd/yyyy',
            autoclose: true
        }).datepicker("setDate", new Date());

    </script>
}
@section Footer2{
    <!-- Page -->
    <script src="~/global/js/Plugin/animate-list.js"></script>
    <script src="~/global/js/Plugin/panel.js"></script>
    <script src="~/assets/examples/js/layouts/panel-transition.js"></script>
    <script src="~/global/js/Plugin/datatables.js"></script>
    <script src="~/scripts/js/Master/Rainfall.js"></script>
    <script src="~/assets/examples/js/uikit/icon.js"></script>
    <script src="~/global/js/Plugin/bootstrap-datepicker.js"></script>
}