@model Plantation.Models.DB.LandConcession

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@section Head{
    <!-- Plugins -->
    <link rel="stylesheet" href="~/assets/examples/css/layouts/panel-transition.css">
    <link href="~/global/vendor/bootstrap-datepicker/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/global/vendor/select2/select2.css" rel="stylesheet" />
    <!-- Fonts -->
    <link rel="stylesheet" href="~/global/fonts/font-awesome/font-awesome.css">
    <style>
        .form-group.required .control-label:after {
            content: "*";
            color: red;
        }
    </style>
}

<div class="page">
    <div class="page-header">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "LandConcession")">LandConcession</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </div>
    <div class="page-content">
        <div class="panel panel-bordered">
            <div class="panel-heading">
                <h3 class="panel-title">EDIT CONCESSION</h3>
                <div class="panel-actions">
                    <a class="panel-action icon md-fullscreen" data-toggle="panel-fullscreen" aria-hidden="true"></a>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    @using (Html.BeginForm("Edit", "LandConcession", FormMethod.Post))
                    {
                        <div class="col-xs-12 col-lg-6">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.SID)
                            <div class="form-group required">
                                <label class="col-sm-4 control-label">ID CONCESSION</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(x => x.IDCONCESSION, new { @readonly = true, @class = "form-control form-control-sm", placeholder = "ID Concession", tabindex = "1" })
                                    @Html.ValidationMessageFor(model => model.IDCONCESSION, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group required">
                                <label class="col-sm-4 control-label">Concession Name</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(x => x.CONCESSIONNAME, new { @class = "form-control form-control-sm", placeholder = "Concession Name", tabindex = "1" })
                                    @Html.ValidationMessageFor(model => model.CONCESSIONNAME, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group required">
                                <label class="col-sm-4 control-label">Permission No</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(x => x.PERMISSIONNO, new { @class = "form-control form-control-sm", placeholder = "Permission No", tabindex = "3" })
                                    @Html.ValidationMessageFor(model => model.PERMISSIONNO, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group required">
                                <label class="col-sm-4 control-label">Permission Type</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.PERMISSIONTYPE, Model.GetSelectListPermissionType, new { @class = "form-control form-control-sm", tabindex = "4" })
                                    @Html.ValidationMessageFor(model => model.PERMISSIONTYPE, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Permission Date</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.PERMISSIONDATE, new { @class = "form-control form-control-sm", placeholder = "Permission Date", tabindex = "5" })
                                    @Html.ValidationMessageFor(model => model.PERMISSIONDATE, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                        </div>
                        <div class="col-xs-12 col-lg-6">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Start Date</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.STARTDATE, new { @class = "form-control form-control-sm", tabindex = "10" })
                                    @Html.ValidationMessageFor(model => model.STARTDATE, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <label class="col-sm-4 control-label">End Date</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.ENDDATE, new { @class = "form-control form-control-sm", tabindex = "10" })
                                    @Html.ValidationMessageFor(model => model.ENDDATE, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group required">
                                <label class="col-sm-4 control-label">Country</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.COUNTRY, Model.GetSelectListCountry, new { @class = "form-control form-control-sm", tabindex = "8" })
                                    @Html.ValidationMessageFor(model => model.COUNTRY, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group required">
                                <label class="col-sm-4 control-label">Province</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.PROVINCE, Model.GetSelectListProvince, new { @class = "form-control form-control-sm", tabindex = "9" })
                                    @Html.ValidationMessageFor(model => model.PROVINCE, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group required">
                                <label class="col-sm-4 control-label">City</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.CITY, Model.GetSelectListCity, new { @class = "form-control form-control-sm", tabindex = "10" })
                                    @Html.ValidationMessageFor(model => model.CITY, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group required">
                                <label class="col-sm-4 control-label">Hectarage</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(x => x.HECTARAGE, new { @class = "form-control form-control-sm", tabindex = "10" })
                                    @Html.ValidationMessageFor(model => model.HECTARAGE, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary"><i class="icon fa-save" aria-hidden="true"></i> Save</button>
                                    <button type="button" class="btn btn-default waves-effect" onclick="location.href='@Url.Action("Index", "LandConcession")';return false;"><i class="icon fa-remove" aria-hidden="true"></i> Cancel</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Footer1{
    <!-- Plugins -->
    <script src="~/global/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/global/vendor/datatables-fixedheader/dataTables.fixedHeader.js"></script>
    <script src="~/global/vendor/datatables-bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/global/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script src="~/global/vendor/datatables-tabletools/dataTables.tableTools.js"></script>
    <script src="~/global/vendor/asrange/jquery-asRange.min.js"></script>
    <script src="~/global/vendor/bootbox/bootbox.js"></script>
    <script src="~/global/vendor/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script src="~/global/vendor/select2/select2.full.min.js"></script>
    <script>
        $('#PERMISSIONDATE').datepicker({
            format: 'mm/dd/yyyy',
            autoclose: true
        }).datepicker("setDate", new Date());

        $('#STARTDATE').datepicker({
            format: 'mm/dd/yyyy',
            autoclose: true
        }).datepicker("setDate", new Date());

        $('#ENDDATE').datepicker({
            format: 'mm/dd/yyyy',
            autoclose: true
        }).datepicker("setDate", new Date());

    </script>
    <script type="text/javascript">

        $("#COUNTRY").change(function () {
            var countryid = $('#COUNTRY').val() === "" ? 0 : $('#COUNTRY').val();
            console.info(countryid);
            $.getJSON('@Url.Action("GetProvinceByCountry", "LandConcession")', { Country: countryid }, function (json) {
                $('#PROVINCE').empty();
                $('#PROVINCE').append($('<option>').text("--Select Province--").attr('value', ''));
                $.each(json, function (i, obj) {
                    $('#PROVINCE').append($('<option>').text(obj.PROVINCENAME).attr('value', obj.SID));
                });

                $('#PROVINCE').change();
            });
        })

        $("#PROVINCE").change(function () {
            var provinceid = $('#PROVINCE').val() === "" ? 0 : $('#PROVINCE').val();
            $.getJSON('@Url.Action("GetCityByProvince", "LandConcession")', { Province: provinceid }, function (json) {
                $('#CITY').empty();
                $('#CITY').append($('<option>').text("--Select City--").attr('value', ''));
                $.each(json, function (i, obj) {
                    $('#CITY').append($('<option>').text(obj.CITYNAME).attr('value', obj.SID));
                });
            });
        })
    </script>
    <script>
        $("#COUNTRY").select2({ allowClear: true });
        $("#PROVINCE").select2({ allowClear: true });
        $("#CITY").select2({ allowClear: true });
        $("#PERMISSIONTYPE").select2({ allowClear: true });
    </script>
}

@section Footer2{
    <!-- Page -->
    <script src="~/global/js/Plugin/animate-list.js"></script>
    <script src="~/global/js/Plugin/panel.js"></script>
    <script src="~/assets/examples/js/layouts/panel-transition.js"></script>
    <script src="~/global/js/Plugin/datatables.js"></script>
    <script src="~/scripts/js/Master/LandConcession.js"></script>
    <script src="~/assets/examples/js/uikit/icon.js"></script>
}