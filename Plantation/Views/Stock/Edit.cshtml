@model Plantation.Models.DB.Stock

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@section Head{
    <!-- Plugins -->
    <link rel="stylesheet" href="~/assets/examples/css/layouts/panel-transition.css">
    <link href="~/global/vendor/bootstrap-datepicker/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/global/vendor/select2/select2.css" rel="stylesheet" />
    <!-- Fonts -->
    <link rel="stylesheet" href="~/global/fonts/font-awesome/font-awesome.css">
    <style>
        .form-group.required .control-label:after {
            content: "*";
            color: red;
        }
    </style>
}

<div class="page">
    <div class="page-header">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Stock")">Stock</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </div>
    <div class="page-content">
        <div class="panel panel-bordered">
            <div class="panel-heading">
                <h3 class="panel-title">EDIT STOCK</h3>
                <div class="panel-actions">
                    <a class="panel-action icon md-fullscreen" data-toggle="panel-fullscreen" aria-hidden="true"></a>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    @using (Html.BeginForm("Edit", "Stock", FormMethod.Post))
                    {
                    <div class="col-xs-12 col-lg-6">
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.SID)
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">ID Stock</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(x => x.IDSTOCK, new { @class = "form-control form-control-sm", placeholder = "ID Stock", tabindex = "1" })
                                @Html.ValidationMessageFor(model => model.IDSTOCK, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Stock Name</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(x => x.STOCKNAME, new { @class = "form-control form-control-sm", placeholder = "Stock Name", tabindex = "1" })
                                @Html.ValidationMessageFor(model => model.STOCKNAME, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Stock Group</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(x => x.STOCKGROUP, Model.GetSelectListStockGroup, new { @class = "form-control form-control-sm", tabindex = "1" })
                                @Html.ValidationMessageFor(model => model.STOCKGROUP, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Part Number</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(x => x.PARTNUMBER, new { @class = "form-control form-control-sm", placeholder = "Part Number", tabindex = "1" })
                                @Html.ValidationMessageFor(model => model.PARTNUMBER, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">UOM</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(x => x.UOM, Model.GetSelectListUnitOfMeasure, new { @class = "form-control form-control-sm", tabindex = "2" })
                                @Html.ValidationMessageFor(model => model.UOM, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group required">
                            <label class="col-sm-4 control-label">Item Type</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(x => x.ITEMTYPE, Model.GetSelectListItemType, new { @class = "form-control form-control-sm", tabindex = "2" })
                                @Html.ValidationMessageFor(model => model.ITEMTYPE, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Minimum Stock</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(x => x.MINIMUMSTOCK, new { @class = "form-control form-control-sm", placeholder = "Minimum Stock", tabindex = "2" })
                                @Html.ValidationMessageFor(model => model.MINIMUMSTOCK, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Maximum Stock</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.MAXIMUMSTOCK, new { @class = "form-control form-control-sm", placeholder = "Maximum Stock", tabindex = "2" })
                                @Html.ValidationMessageFor(model => model.MAXIMUMSTOCK, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary"><i class="icon fa-save" aria-hidden="true"></i> Save</button>
                                <button type="button" class="btn btn-default waves-effect" onclick="location.href='@Url.Action("Index", "Stock")';return false;"><i class="icon fa-remove" aria-hidden="true"></i> Cancel</button>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Footer1{
    <!-- Plugins -->
    <script src="~/global/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/global/vendor/datatables-fixedheader/dataTables.fixedHeader.js"></script>
    <script src="~/global/vendor/datatables-bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/global/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script src="~/global/vendor/datatables-tabletools/dataTables.tableTools.js"></script>
    <script src="~/global/vendor/asrange/jquery-asRange.min.js"></script>
    <script src="~/global/vendor/bootbox/bootbox.js"></script>
    <script src="~/global/vendor/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script src="~/global/vendor/select2/select2.full.min.js"></script>
    <script>
        $("#STOCKGROUP").select2({ allowClear: true });
        $("#UOM").select2({ allowClear: true });
        $("#ITEMTYPE").select2({ allowClear: true });
    </script>
}

@section Footer2{
    <!-- Page -->
    <script src="~/global/js/Plugin/animate-list.js"></script>
    <script src="~/global/js/Plugin/panel.js"></script>
    <script src="~/assets/examples/js/layouts/panel-transition.js"></script>
    <script src="~/global/js/Plugin/datatables.js"></script>
    <script src="~/scripts/js/Master/Stock.js"></script>
    <script src="~/assets/examples/js/uikit/icon.js"></script>
    <script src="~/global/js/Plugin/select2.js"></script>
}